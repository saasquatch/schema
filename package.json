{
  "name": "@saasquatch/schema",
  "version": "1.6.1",
  "main": "index.js",
  "repository": "git@github.com:saasquatch/schema.git",
  "author": "SaaSquatch <hello@saasquat.ch>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "deploy": "np --no-cleanup --no-yarn",
    "version": "npm run generate && git add --all",
    "generate": "npm run generate:version && npm run generate:types",
    "generate:version": "ts-node compilers\\Version.ts",
    "generate:types": "ts-node compilers\\SchemaToTypescript.ts",
    "test": "npm run generate && ajv compile -s \"json/*.schema.json\" --unknown-formats=ignore && jest",
    "jest": "jest"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/glob": "^5.0.35",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.23",
    "ajv-cli": "^2.1.0",
    "glob": "^7.1.2",
    "jest": "^22.4.4",
    "json-schema-to-typescript": "^5.5.0",
    "np": "^3.0.4",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2",
    "write-json-file": "^2.3.0",
    "json-schema-ref-parser": "^5.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/tests/*.(ts|tsx|js)"
    ]
  }
}
