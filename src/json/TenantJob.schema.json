{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Create a Job",
	"type": "object",
	"required": [
		"type"
	],
	"properties": {
		"type": {
			"type": "string",
			"title": "Job Type",
			"enum": [
				"QUERY/USER",
				"QUERY/USER_REFERRAL",
				"QUERY/USER_REWARD_BALANCE",
				"QUERY/REWARD_BALANCE",
				"QUERY/REFERRAL",
				"QUERY/REFERRAL_PARTICIPANT",
				"QUERY/REDEEMABLE_REWARD_BALANCE",
				"MUTATION/USER",
				"MUTATION/REDEEMABLE_REWARD_BALANCE"
			],
			"enumNames": [
				"Export: User",
				"Export: Users & Referrals",
				"Export: Users & Reward Balances",
				"Export: Reward Balances",
				"Export: Referrals",
				"Export: Referral Participants",
				"Export: Outstanding Reward Balance",
				"Import: User",
				"Import: Bulk Redemption"
			],
			"default": "MUTATION/USER"
		},
		"outputFormat": {
			"type": "string",
			"enum": [
				"CSV",
				"XLS"
			],
			"default": "CSV"
		},
		"name": {
			"type": "string",
			"title": "Job Name"
		},
		"mailtoEmail": {
			"type": "string",
			"title": "Notify on job completion:"
		},
		"requester": {
			"type": "string",
			"title": "Requested By"
		}
	},
	"dependencies": {
		"type": {
			"oneOf": [
				{
					"$ref": "#/definitions/params/userQuery"
				},
				{
					"$ref": "#/definitions/params/userReferralQuery"
				},
				{
					"$ref": "#/definitions/params/userRewardBalanceQuery"
				},
				{
					"$ref": "#/definitions/params/rewardBalanceQuery"
				},
				{
					"$ref": "#/definitions/params/referralQuery"
				},
				{
					"$ref": "#/definitions/params/redeemableRewardBalanceQuery"
				},
				{
					"$ref": "#/definitions/params/userMutation"
				},
				{
					"$ref": "#/definitions/params/redeemableRewardBalanceMutation"
				}
			]
		}
	},
	"additionalProperties": false,
	"definitions": {
		"params": {
			"userQuery": {
				"properties": {
					"type": {
						"enum": [
							"QUERY/USER"
						]
					},
					"params": {
						"allOf": [
							{
								"$ref": "#/definitions/programId"
							},
							{
								"$ref": "#/definitions/legacyExportParams"
							}
						]
					}
				}
			},
			"userReferralQuery": {
				"properties": {
					"type": {
						"enum": [
							"QUERY/USER_REFERRAL"
						]
					},
					"params": {
						"$ref": "#/definitions/legacyExportParams"
					}
				}								
			},
			"userRewardBalanceQuery": {
				"properties": {
					"type": {
						"enum": [
							"QUERY/USER_REWARD_BALANCE"
						]
					},
					"params": {
						"$ref": "#/definitions/rewardBalanceParams"
					}
				}				
			},
			"rewardBalanceQuery": {
				"properties": {
					"type": {
						"enum": [
							"QUERY/REWARD_BALANCE"
						]
					},
					"params": {
						"$ref": "#/definitions/rewardBalanceParams"
					}
				}				
			},
			"referralQuery": {
				"properties": {
					"type": {
						"enum": [
							"QUERY/REFERRAL"
						]
					},
					"params": {
						"$ref": "#/definitions/legacyExportParams"
					}
				}
			},
			"referralParticipant": {
				"properties": {
					"type": {
						"enum": [
							"QUERY/REFERRAL_PARTICIPANT"
						]
					},
					"params": {
						"allOf": [
							{
								"$ref": "#/definitions/legacyExportParams/properties/createdOrUpdatedSince"
							},
							{
								"$ref": "#/definitions/legacyExportParams/properties/createdOrUpdatedBefore"
							},
							{
								"properties": {
									"shareMedium": {
										"type": "string",
										"enum": [
											"FACEBOOK",
											"TWITTER",
											"EMAIL",
											"DIRECT",
											"LINKEDIN",
											"SMS",
											"FBMESSENGER",
											"WHATSAP",
											"LINEMESSENGER",
											"PINTEREST",
											"UNKNOWN"
										]
									},
									"engagementMedium": {
										"type": "string",
										"enum": [
											"EMBED",
											"NOCONTENT",
											"EMPTY",
											"MOBILED",
											"HOSTED",
											"POPUP"
										]
									}
								}
							}
						]
					}
				}
			},
			"redeemableRewardBalanceQuery": {
				"properties": {
					"type": {
						"enum": [
							"QUERY/REDEEMABLE_REWARD_BALANCE"
						]
					},
					"params": {
						"$ref": "#/definitions/redeemableRewardBalanceParams"
					}
				}
			},
			"userMutation": {
				"properties": {
					"type": {
						"enum": [
							"MUTATION/USER"
						]
					},
					"fileRef": {
						"type": "string",
						"title": "File to Upload"
					},
					"params": {
						"allOf": [
							{
								"$ref": "#/definitions/programId"
							},
							{
								"$ref": "#/definitions/segments"
							}
						]
					}
				},
				"required": [
					"fileRef"
				]
			},
			"redeemableRewardBalanceMutation": {
				"properties": {
					"type": {
						"enum": [
							"MUTATION/REDEEMABLE_REWARD_BALANCE"
						]
					},
					"fileRef": {
						"type": "string",
						"title": "File to Upload"
					}
				}
			}
		},
		"programId": {
			"type": "string",
			"title": "Program Id"
		},
		"segments": {
			"type": "string",
			"title": "Segments",
			"items": {
				"type": "string"
			}
		},
		"rewardBalanceParams": {
			"allOf": [
				{
					"$ref": "#/definitions/legacyExportParams/properties/createdSince"
				},
				{
					"$ref": "#/definitions/legacyExportParams/properties/createdBefore"
				}
			]
		},
		"redeemableRewardBalanceParams": {
			"filter": {
				"type": "object",
				"title": "Reward Balance Filter",
				"properties": {
					"type_eq": {
						"type": "string",
						"enum": [
							"PCT_DISCOUNT",
							"CREDIT",
							"FUELTANK",
							"INTEGRATION"
						]
					},
					"unit_eq": {
						"type": "string"
					},
					"unit_in": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"unitType_eq": {
						"type": "string"
					},
					"currency_eq": {
						"type": "string"
					}
				}
			}
		},
		"legacyExportParams": {
			"properties": {
				"createdSince": {
					"type": "integer",
					"title": "Created Since"
				},
				"createdBefore": {
					"type": "integer",
					"title": "Created Before"
				},
				"updatedSince": {
					"type": "integer",
					"title": "Updated Since"
				},
				"updatedBefore": {
					"type": "integer",
					"title": "Updated Before"
				},
				"createdOrUpdatedSince": {
					"type": "integer",
					"title": "Created Or Updated Since"
				},
				"createdOrUpdatedBefore": {
					"type": "integer",
					"title": "Created Or Updated Before"
				}
			}
		}
	}
}