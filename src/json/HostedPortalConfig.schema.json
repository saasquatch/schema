{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hosted Portal Config",
  "type": "object",
  "required": ["enabled"],
  "additionalProperties": false,
  "oneOf": [
    {
      "properties": {
        "enabled": {
          "const": true
        }
      },
      "required": ["widgetKey"]
    },
    {
      "properties": {
        "enabled": {
          "const": false
        }
      },
      "required": []
    }
  ],
  "properties": {
    "enabled": {
      "title": "Enabled",
      "description": "Enable the hosted portal",
      "default": false,
      "type": "boolean"
    },
    "domain": {
      "title": "Domain",
      "description": "The domain the hosted portal is hosted on",
      "type": "string"
    },
    "headHtml": {
      "title": "Head HTML",
      "description": "The HTML to be injected into the <head> element of the hosted portal",
      "type": "string"
    },
    "widgetKey": {
      "title": "Widget Key",
      "description": "The widget key of the hosted portal",
      "type": "string"
    }
  }
}
