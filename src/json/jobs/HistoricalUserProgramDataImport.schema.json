{
	"$schema": "http://json-schema.org/draft-06/schema#",
	"title": "Historical User Data Import Schema",
	"description": "Defines the graph of user data that can be import existing users/referrals/rewards/etc into SaaSquatch.",
	"type": "object",
	"additionalProperties": false,
	"properties": {
    "user": {
      "type": "object",
      "title": "User",
      "description": "The user to import",
      "properties": {
        "id": {
          "type": "string",
          "title": "User Id"
        },
        "accountId": {
          "type": "string",
          "title": "Account Id"
        },
        "firstName": {
          "type": "string",
          "title": "First Name"
        },
        "lastName": {
          "type": "string",
          "title": "Last Name"
        },
        "email": {
          "type": "string",
          "title": "Email"
        },
        "customFields": {
          "type": "object",
          "$ref": "../UserCustomFields.schema.json#"
        },
        "dateCreated": {
          "type": "integer",
          "title": "Date Created"
        },
        "dateUpdated": {
          "type": "integer",
          "title": "Date Updated"
        },
        "referredByReferral": {
          "type": "object",
          "title": "Referred By Referral",
          "properties": {
            "referrerUser": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "title": "User Id"
                },
                "accountId": {
                  "type": "string",
                  "title": "Account Id"
                }
              }
            },
            "dateReferralStarted": {
              "type": "integer",
              "title": "Date Referral Started"
            },
            "dateConverted": {
              "type": "integer",
              "title": "Date Converted"
            },
            "rewards": {
              "$ref": "#/definitions/rewards"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "rewards": {
      "type": "array",
      "title": "Rewards",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "title": "User Id"
          },
          "type": {
            "type": "string",
            "title": "Reward Type",
            "enum": ["CREDIT"]
          },
          "accountId": {
            "type": "string",
            "title": "Account Id"
          },
          "unit": {
            "type": "string",
            "title": "Reward Unit"
          },
          "assignedCredit": {
            "type": "string",
            "title": "Reward Amount"
          },
          "programRewardKey": {
            "type": "string",
            "title": "Reward Key"
          },
          "dateGiven": {
            "type": "integer",
            "title": "Date Given"
          },
          "redemptions": {
            "$ref": "#/definitions/redemptions"
          }
        }
      }
    },
    "redemptions": {
      "type": "array",
      "title": "Redemptions",
      "items": {
        "type": "object",
        "properties": {
          "quantityRedeemed": {
            "type": "integer",
            "title": "Redeemed Amount"
          },
          "dateRedeemed": {
            "type": "integer",
            "title": "Date Redeemed"
          }
        }
      }
    }
  }
}