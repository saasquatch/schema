{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "User Custom Fields Schema",
  "description": "Defines how custom fields can be specified on a user. Allows alphanumeric numbers and underscores.",
  "type": "object",
  "patternProperties":{
    "^[a-zA-Z0-9_]*$": {
        "oneOf": [
            {
                "type": "string",
                "maxLength": 1024
            },
            { "type": "boolean" },
            { "type": "integer" },
            { "type": "number" },
            { "type": "null" }
        ]
    }  
  },
  "maxProperties": 10
}
