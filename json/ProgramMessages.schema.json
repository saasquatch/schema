{
    "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Program Messaging",
	"description": "Defines the configurable share messages provided by this program.",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"shareLinkOpenGraph","messengerLinkOpenGraph","messaging"
	],
	"properties": {
        "shareLinkOpenGraph": {
            "$ref":"#/definitions/openGraph"
        },
        "messengerLinkOpenGraph":{
            "$ref":"#/definitions/openGraph"
        },
        "messaging":{
            "type":"array",
            "title": "Share Messaging",
            "items": [
                {
                    "$ref":"#/definitions/programMessage/facebook"
                },
                {
                    "$ref":"#/definitions/programMessage/twitter"
                },
                {
                    "$ref":"#/definitions/programMessage/email"
                },
                {
                    "$ref":"#/definitions/programMessage/linkedin"
                },
                {
                    "$ref":"#/definitions/programMessage/sms"
                },
                {
                    "$ref":"#/definitions/programMessage/whatsapp"
                },
                {
                    "$ref":"#/definitions/programMessage/linemessenger"
                },
                {
                    "$ref":"#/definitions/programMessage/pinterest"
                }
            ],
            "additionalItems": false
        }
    },
    "definitions": {
        "openGraph":{
            "type":"object",
            "title": "Share Link Open Graph",
            "properties": {
                "source":{
                    "type":"string",
                    "enum": [
                        "HOSTED",
                        "LANDINGPAGE"
                    ]
                }
            },
            "dependencies": {
                "source":{
                    "oneOf":[
                        {
                            "properties": {
                                "source":{
                                    "enum": [
                                        "HOSTED"
                                    ]
                                },
                                "title":{
                                    "type":"string",
                                    "title": "Title",
                                    "minLength": 4
                                },
                                "description":{
                                    "type":"string",
                                    "title": "Description",
                                    "minLength": 4
                                },
                                "image":{
                                    "type":"string",
                                    "title": "Image"
                                }
                            },
                            "additionalProperties": false,
                            "required":[
                                "source","title","description"
                            ]
                        },
                        {
                            "properties": {
                                "source":{
                                    "enum": [
                                        "LANDINGPAGE"
                                    ]
                                }
                            },
                            "additionalProperties": false,
                            "required":[
                                "source"
                            ]
                        }
                    ]
                }
            }
        },
        "programMessage":{
            "facebook":{
                "type":"object",
                "properties": {
                    "shareMedium":{
                        "type":"string",
                        "default":"FACEBOOK",
                        "enum": [
                            "FACEBOOK"
                        ]
                    },
                    "config":{
                        "type":"object",
                        "properties": {
                            "facebookShareImageUrl":{
                                "type":"string",
                                "title": "Facebook URL Image"
                            },
                            "facebookShareSubject":{
                                "type":"string",
                                "title":"Facebook Share Subject",
                                "minLength":4
                            },
                            "facebookShareBody":{
                                "type":"string",
                                "title":"Facebook Share Body",
                                "minLength":4
                            }
                        },
                        "additionalProperties":false,
                        "required":[
                            "facebookShareImageUrl","facebookShareSubject","facebookShareBody"
                        ]
                    }
                },
                "additionalProperties": false
            },
            "twitter":{
                "type":"object",
                "properties":{
                    "shareMedium":{
                        "type":"string",
                        "default":"TWITTER",
                        "enum": [
                            "TWITTER"
                        ]
                    },
                    "config":{
                        "type":"object",
                        "properties": {
                            "twitterShareBody":{
                                "type":"string",
                                "title":"Twitter Share Body",
                                "minLength":4
                            }
                        },
                        "additionalProperties":false,
                        "required":[
                            "twitterShareBody"
                        ]
                    }
                },
                "additionalProperties": false
            },
            "email":{
                "type":"object",
                "properties":{
                    "shareMedium":{
                        "type":"string",
                        "default":"EMAIL",
                        "enum": [
                            "EMAIL"
                        ]
                    },
                    "config":{
                        "type":"object",
                        "properties":{
                            "emailShareSubject":{
                                "type":"string",
                                "title":"Email Share Subject",
                                "minLength":4
                             },
                             "emailShareBody":{
                                "type":"string",
                                "title":"Email Share Body",
                                "minLength":4
                            }
                        },
                        "additionalProperties":false,
                        "required":[
                            "emailShareSubject","emailShareBody"
                        ]
                    }
                },
                "additionalProperties": false
            },
            "linkedin":{
                "type":"object",
                "properties":{
                    "shareMedium":{
                        "type":"string",
                        "default":"LINKEDIN",
                        "enum": [
                            "LINKEDIN"
                        ]
                    },
                    "config":{
                        "type":"object",
                        "properties":{
                            "linkedinShareImageURL":{
                                "type":"string",
                                "title":"Linkedin URL Image"
                             },
                             "linkedinShareSubject":{
                                "type":"string",
                                "title":"Linkedin Share Subject",
                                "minLength":4
                             },
                            "linkedinShareBody":{
                               "type":"string",
                               "title":"Linkedin Share Body",
                               "minLength":4
                            }
                        },
                        "additionalProperties":false,
                        "required": [
                            "linkedinShareImageUrl","linkedinShareSubject","linkedinShareBody"
                        ]
                    }
                },
                "additionalProperties": false
            },
            "sms":{
                "type":"object",
                "properties":{
                    "shareMedium":{
                        "type":"string",
                        "default":"SMS",
                        "enum": [
                            "SMS"
                        ]
                    },
                    "config":{
                        "type":"object",
                        "properties":{
                            "smsShareBody":{
                                "type":"string",
                                "title":"SMS Share Body",
                                "minLength":4
                            }
                        },
                        "additionalProperties":false,
                        "required": [
                            "smsShareBody"
                        ]
                    }
                },
                "additionalProperties": false
            },
            "whatsapp":{
                "type":"object",
                "properties":{
                    "shareMedium":{
                        "type":"string",
                        "default":"WHATSAPP",
                        "enum": [
                            "WHATSAPP"
                        ]
                    },
                    "config":{
                        "type":"object",
                        "properties":{
                            "whatsAppShareBody":{
                                "type":"string",
                                "title":"WhatsApp Share Body",
                                "minLength":4
                            }
                        },
                        "additionalProperties":false,
                        "required": [
                            "whatsAppShareBody"
                        ]
                    }
                },
                "additionalProperties": false
            },
            "linemessenger":{
                "type":"object",
                "properties":{
                    "shareMedium":{
                        "type":"string",
                        "default":"LINEMESSENGER",
                        "enum": [
                            "LINEMESSENGER"
                        ]
                    },
                    "config":{
                        "type":"object",
                        "properties":{
                            "lineMessengerShareBody":{
                                "type":"string",
                                "title":"Line Messenger Share Body",
                                "minLength":4
                            }
                        },
                        "additionalProperties":false,
                        "required": [
                            "lineMessengerShareBody"
                        ]
                    }
                },
                "additionalProperties": false
            },
            "pinterest":{
                "type":"object",
                "properties":{
                    "shareMedium":{
                        "type":"string",
                        "default":"PINTEREST",
                        "enum": [
                            "PINTEREST"
                        ]
                    },
                    "config":{
                        "type":"object",
                        "properties":{
                            "pinterestShareBody":{
                                "type":"string",
                                "title":"Pinterest Share Body",
                                "minLength":4
                            }
                        },
                        "additionalProperties":false,
                        "required": [
                            "pinterestShareBody"
                        ]
                    }
                },
                "additionalProperties": false
            }
        }
    }
}