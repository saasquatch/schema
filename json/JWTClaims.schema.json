{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "JWT Claim Schema",
	"description": "Defines the claims provided with JWT to be used by SaaSquatch Auth.",
    "type": "object",
    "additionalProperties": false,
	"required": [
        "sub",
        "iss"
	],
	"properties": {
        "authType" : {
            "enum": [
                "integration",
                "open",
                "noauth"
            ]
        },
        "sub" : {
            "type" : "string",
            "title": "Subject"
        },
        "iss" : {
            "type" : "string",
            "title": "Issuer"
        },
        "exp" : {
            "type" : "integer",
            "title": "Expiry"
        },
        "iat" : {
            "type" : "integer",
            "title": "Issued At Time"
        },
        "user" : {
            "type" : "object",
            "additionalProperties": true,
            "required": [
                "id",
                "accountId"
            ],
            "properties": {
                "id" : {
                    "type" : "string",
                    "title": "User ID"
                },
                "accountId" : {
                    "type" : "string",
                    "title": "Account ID"
                }
            }
        }
    }
}