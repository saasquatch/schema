{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Create a Job",
	"type": "object",
	"required": [
		"type"
	],
	"properties": {
		"type": {
			"type": "string",
			"title": "Job Type",
			"enum": [
				"QUERY/USER",
				"QUERY/USER_REFERRAL",
				"QUERY/USER_REWARD_BALANCE",
				"QUERY/REWARD_BALANCE",
				"QUERY/REFERRAL",
				"MUTATION/USER"
			],
			"enumNames": [
				"Export: User",
				"Export: Users & Referrals",
				"Export: Users & Referrals",
				"Export: Users & Reward Balances",
				"Export: Reward Balances",
				"Import: User"
			],
			"default": "MUTATION/USER"
		},
		"outputFormat": {
			"type": "string",
			"enum": [
				"CSV",
				"XLS"
			],
			"default": "CSV"
		},
		"name": {
			"type": "string",
			"title": "Job Name"
		},
		"mailtoEmail": {
			"type": "string",
			"title": "Notify on job completion:"
		},
		"requester": {
			"type": "string",
			"title": "Requested By"
		}
	},
	"dependencies": {
		"type": {
			"oneOf": [
				{
					"properties": {
						"type": {
							"enum": [
								"MUTATION/USER"
							]
						},
						"fileRef": {
							"type": "string",
							"title": "File to Upload"
						}
					},
					"required": [
						"fileRef"
					]
				}
			]
		}
	},
	"id": "https://unpkg.com/@saasquatch/schema@1.5.1-10/json/TenantJob.schema.json"
}
