{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "HTML Widget Template Schema",
	"description": "Defines a web-component based widget template that uses vanilla HTML.",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"meta",
		"htmlTemplate"
	],
	"properties": {
		"meta": {
			"type": "object",
			"title": "Template Meta",
			"additionalProperties": false,
			"properties": {
				"components": {
					"type": "object",
					"properties": {
						"version": {
							"type": "string",
							"default": "0.x"
						},
						"package": {
							"type": "string",
							"default": "@saasquatch/vanilla-components"
						},
						"file": {
							"type": "string",
							"default": "widget-components"
						}
					}
				},
				"grapesjsTemplate": {
					"type": "object",
					"properties": {
						"properties": {
							"version": {
								"type": "string",
								"default": "0.x"
							},
							"package": {
								"type": "string",
								"default": "@saasquatch/vanilla-components-grapesjs"
							},
							"file": {
								"type": "string",
								"default": ""
							}
						}
					}
				}
			}
		},
		"htmlTemplate": {
			"type": "string",
			"title": "HTML Template",
			"description": "Raw HTML content that can use web components."
		}
	},
	"id": "https://unpkg.com/@saasquatch/schema@1.5.1-10/json/HtmlWidget.schema.json"
}
